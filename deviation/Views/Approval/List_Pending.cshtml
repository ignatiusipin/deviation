    <script>
        $(document).ready(function () {
            LoadTablePending();

            $("#btnAddDev").click(function () {
                window.location.href = "Home/Input";
            });

            $("#BtnDetail").click(function () {
                var tes = '10'
                window.location.href = "Input?id=" + tes;
            });

            $("#BtnDelete").click(function () {
                window.location.href = "Input";
            });
        });

        function LoadTablePending() {
            $.ajax({
                type: "POST",
                url: "LoadPendingApprove",
                datatype: "JSON",
                contentType: false,
                processData: false,
                success: function (data) {
                    alert(data[0].PROBLEM);
                    var trHTML = '', trav = 0, Count = data.length;
                    if (Count > 0) {
                        for (trav = 0; trav < Count; trav++) {
                            var no = 1
                            no = no + trav
                            trHTML += "<tr>"
                                + "<td>" + no +"</td>"
                                + "<td>" + data[trav].PROBLEM + "</td>" 
                                + "<td>" + data[trav].id_proposer +"</td>"
                                + "<td>" + data[trav].date_of_incident +"</td>"
                                + "<td>" + data[trav].status +"</td>"
                                + "<td>"
                                   + ' <button id="BtnDetail" style="width:50% ; height : 20%" type="button" class="btn mb-1 btn-info">Detail</button> '
                                   + ' <button id="BtnDelete" style="width:50% ; height : 20%" type="button" class="btn mb-1 btn-danger sweet-confirm">Delete</button> '
                                + "</td>"
                                + "</tr>"
                        }
                        $("#tBodyListPending").empty();
                        $("#tBodyListPending").append(trHTML);
                    }
                },
                error: function (txtStatus, errorThrown) {
                    alert(txtStatus);
                }
            });
        }
    </script>
