
@{
    ViewBag.Title = "DisposisiProduk";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0)">QO</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Disposisi Tindakan</a></li>
            </ol>
        </div>
    </div>
    <!-- row -->

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="d-inline">Laporan Penyimpangan</h4>
                        <div class="form-group row">
                            <div class="col">
                                <br />
                                <label>Register Number</label>
                                <br />
                                <label id="lblReq" style="font-weight:bold"></label>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col">
                                <label>Tanggal</label>
                                <input id="TbTglCreated" class="form-control" readonly="readonly">
                            </div>
                            <div class="col">
                                <label>Nomer Deviation</label>
                                <input id="TbNmrDev" type="text" class="form-control" readonly="readonly">
                            </div>

                            <div class="col">
                                <label>Pengusul</label>
                                <input id="TbPesul" type="text" class="form-control" readonly="readonly">
                            </div>
                            <div class="col">
                                <label>Departemen</label>
                                <input id="TbDeptPusul" type="text" class="form-control" readonly="readonly">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @* Form Deviation Detail *@
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="d-inline">Detail Laporan</h4>
                        <div class="form-group row">
                            <div class="col">
                                <label>Detail Deviation</label>
                                <br>
                                <button type="button" class="btn mb-1 btn-outline-info btn-block">View</button>
                            </div>
                            <div class="col">
                            </div>
                            <div class="col">
                            </div>
                            <div class="col">
                                <label>Approve By</label><br>
                                <label>Supervisor Superior</label>
                            </div>

                            <div class="col">
                                <label>Approve Date</label></br>
                                <label>29 Februari 2020</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @* Koordinator Penyimpangan *@
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="d-inline">Koordinator Penyimpangan</h4>
                        <div class="form-group row">
                            <div class="col">
                                <br>
                                <div col="col-6">
                                    <label><b>Quality System</b></label>
                                    <br>
                                    <label>Nama Orang QS</label>
                                </div>
                            </div>
                            <div class="col">
                            </div>
                            <div class="col">
                            </div>
                            <div class="col">
                            </div>
                            <div class="col">
                                <br>
                                <div class="form-group row">
                                    <div class="col">
                                        <label><b>Process Date</b></label>
                                        <br>
                                        <label>20 Maret 2020</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @* Evaluator Penyimpangan *@
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="d-inline">Evaluator Penyimpangan</h4>
                        <div class="col">
                            <br>
                            <div class="form-group row">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped verticle-middle">
                                        <thead>
                                            <tr>
                                                <th scope="col">No</th>
                                                <th scope="col">NIK</th>
                                                <th scope="col">Nama</th>
                                                <th scope="col">Departemen</th>
                                                <th scope="col">Tanggal Evaluasi</th>
                                                <th scope="col">Jam Evaluasi</th>
                                                <th scope="col">Penjelasan</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div> <!-- End Table-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @* QA / QS Manager *@
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="d-inline">Tindakan dan Verifikasi Remidial QA / QS </h4>
                        <br>
                        <br>
                        <div class="col">
                            <div class="form-group row">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped verticle-middle">
                                        <thead>
                                            <tr>
                                                <th scope="col">No</th>
                                                <th scope="col">Tindakan Remidial</th>
                                                <th scope="col">Nama</th>
                                                <th scope="col">Bagian Departemen</th>
                                                <th scope="col">Attachment bukti</th>
                                                <th scope="col">Dilakukan/belum</th>
                                                <th scope="col">Verifikasi</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @* Disposisi Produk / Sistem *@
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="d-inline">Disposisi Produk / Sistem</h4>
                        <br /><br />
                        <div class="form-group row">
                            <div class="col">
                                <div class="form-group row">
                                    <div class="col">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" id="cbRelease" value="Release">
                                            <label class="form-check-label" for="cbRelease">Release</label>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" id="cbReject" value="Reject">
                                            <label class="form-check-label" for="cbReject">Reject</label>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" id="cbRecall" value="Recall">
                                            <label class="form-check-label" for="cbRecall">Recall</label>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" id="cbLain" value="Lain-lain">
                                            <label class="form-check-label" for="cbLain">Lain-lain</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label><b>Perlu ditindaklanjuti dengan CAR-PAR ?</b></label>
                                    <div class="form-group row">
                                        <div class="col">
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" id="cbYa" value="Ya">
                                                <label class="form-check-label" for="cbYa">Ya</label>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" id="cbTidak" value="Tidak">
                                                <label class="form-check-label" for="cbTidak">Tidak</label>
                                            </div>
                                        </div>
                                        <div class="col"></div>
                                        <div class="col"></div>
                                    </div>
                                </div>
                                
                                <div class="form-group row">
                                    <div class="col">
                                        <button type="button" class="col-2 btn mb-1 btn-outline-success btn-block">View</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col">     
                                <textarea id="txtket" class="form-control" placeholder="Keterangan"></textarea>                                    
                            </div>
                        </div>                       
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
    

